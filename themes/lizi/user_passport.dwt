<script>
$(function(){
	$(".input_box").click(function(){
		$(this).find(".t_text").hide();	
		$(this).find("input").focus();
	})
	
	$(".input_box").focusin(function(){
		$(this).find(".t_text").hide();
	})

	$(".input_box").focusout(function(){
		if($(this).find("input").val() == "")
		{
			$(this).find(".t_text").show();
		}
	})	
})
</script> 

